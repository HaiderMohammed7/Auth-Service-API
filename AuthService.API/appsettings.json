{
  "Application": {
    "Name": "AuthService",
    "Version": "1.0.0",
    "Environment": "Development"
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=Auth_API;Trusted_Connection=True;TrustServerCertificate=True"
  },

  "Jwt": {
    "Issuer": "AuthService",
    "Audience": "AuthServiceClients",
    "SecretKey": "THIS_IS_A_VERY_LONG_AND_SECURE_SECRET_KEY_123456",
    "AccessTokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7
  },

  "Security": {
    "PasswordHashing": {
      "Algorithm": "PBKDF2",
      "Iterations": 100000,
      "SaltSize": 16,
      "KeySize": 32
    }
  },

  "RateLimiting": {
    "Enable": false,
    "RequestsPerMinute": 60
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
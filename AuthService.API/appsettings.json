{
  "Application": {
    "Name": "AuthService",
    "Version": "1.0.0",
    "Environment": "Development"
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=AuthServiceDb;Trusted_Connection=True;TrustServerCertificate=True"
  },

  "Jwt": {
    "Issuer": "AuthService",
    "Audience": "AuthService.Clients",
    "SecretKey": "SUPER_SECRET_KEY_CHANGE_THIS",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },

  "Security": {
    "PasswordHashing": {
      "Algorithm": "PBKDF2",
      "Iterations": 100000,
      "SaltSize": 16,
      "KeySize": 32
    }
  },

  "RateLimiting": {
    "Enable": false,
    "RequestsPerMinute": 60
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}